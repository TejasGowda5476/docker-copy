pipeline {
    agent any
    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage("compose"){
            steps{
                sh "docker-compose up -d"
            }
        }
        stage("login"){
            steps{
                sh "docker exec dev1 /bin/bash"
                sh "cd /usr/share/nginx/html"
                sh "cat index.html"
            }
        }
    }
}
